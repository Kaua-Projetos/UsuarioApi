{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "src/**",
      "pom.xml",
      "nixpacks.toml"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "./mvnw spring-boot:run -Dspring-boot.run.profiles=prod",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
} 